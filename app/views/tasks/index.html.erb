<p style="color: green"><%= notice %></p>

<h1>タスク一覧</h1>

<table>
  <tr>
    <th>ID</th>
    <th>名前</th>
    <th>詳細</th>
    <th>完了状況</th>
    <th>作成日時</th>
    <th>更新日時</th>
    <th>操作</th>
  </tr>

  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.id %></td>
      <td><%= task.name %></td>
      <td><%= task.detail %></td>
      <td><%= task.completed %></td>
      <td><%= task.created_at %></td>
      <td><%= task.updated_at %></td>
      <td>
        <%= link_to '詳細', task %>
        <%= link_to '編集', edit_task_path(task) %>
        <%= link_to '削除', task, method: :delete, data: { confirm: '本当に削除しますか?' } %>
      </td>
    </tr>
  <% end %>
</table>

<br>

<%= link_to '新規作成', new_task_path %>

<style>
    table {
        border-collapse: collapse;
    }
    th, td {
        border: solid 1px;
        padding: 0.5em;
    }
</style>